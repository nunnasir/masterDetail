@model MvcLayoutHtmlHelper.Models.Purchase

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="form-horizontal">
		
		<div class="panel-group">
			<div class="panel panel-success">
				<div class="panel-heading">
					<div class="panel-title">Purchase Header</div>
				</div>
				<div class="panel-body">

					<div class="form-group row">
						@Html.LabelFor(c => c.Name, "Customer Name *", new {@class = "control-label col-md-4"})
						<div class="col-md-4">
							@Html.TextBoxFor(c => c.Name, null, new {@class = "form-control"})
						</div>
					</div>


					<div class="form-group row">
						@Html.LabelFor(c => c.Date, "Purchase Date *", new {@class = "control-label col-md-4"})
						<div class="col-md-4">
							@Html.TextBoxFor(c => c.Date, null, new {@class = "form-control"})
						</div>
					</div>

				</div>
			</div>
		</div>


		<div class="panel-group">
			<div class="panel panel-success">
				<div class="panel-heading">
					<div class="panel-title">Purchase Details</div>
				</div>
				<div class="panel-body">
					<div class="form-group row">
						@Html.Label("ItemName", "Item Name *", new {@class = "control-label col-md-4"})
						<div class="col-md-4">
							@Html.TextBox("ItemName", null, new {@class = "form-control"})
						</div>
					</div>


					<div class="form-group row">
						@Html.Label("ItemQty", "Item Quantity *", new {@class = "control-label col-md-4"})
						<div class="col-md-4">
							@Html.TextBox("ItemQty", null, new {@class = "form-control"})
						</div>
					</div>


					<div class="col-md-4 col-md-offset-4">
						<input type="button" class="btn btn-info" id="AddButton" value="Add" />
					</div>

				</div>
			</div>
		</div>


		<div class="panel-group">
			<div class="panel panel-success">
				<div class="panel-heading">
					<div class="panel-title">Added Purchase Details Items</div>
				</div>
				<div class="panel-body">
					<table class="table table-bordered table-hover table-striped table-responsive">

						<thead>
							<tr style="background-color: green; color: white; font-weight: bold">
								<td>Sl</td>
								<td>Item</td>
								<td>Qty</td>
							</tr>
						</thead>
						<tbody id="PurchaseDetailsTable">

							@if (Model != null && Model.PurchaseDetailses != null && Model.PurchaseDetailses.Count > 0)
							{
								var sl = 0;
								foreach (var item in Model.PurchaseDetailses)
								{
									<tr>
										<td>@(++sl)</td>
										<td>@item.Name</td>
										<td>@item.Qty</td>
									</tr>
								}
							}
					</tbody>

				</table>



			</div>
		</div>
	</div>
</div>

<hr />
<div class="col-md-4 col-md-offset-4">
	<input type="submit" class="btn btn-success" value="Save" />
</div>
}

@section scripts
{
	<script src="~/Scripts/Project/Purchase/PurchaseCreate.js"></script>

}
